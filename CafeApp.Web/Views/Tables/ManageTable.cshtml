@model IEnumerable<CafeApp.Model.Table>

@{
    ViewBag.Title = "ManageTable";
}

    <h2>Manage Table</h2>

    <p>
        @Html.ActionLink("Create New", "Create") |
        @Html.ActionLink("Back to Menu", "AdminMenu", "CafeAdmin")
    </p>
@{ 
    if (ViewBag.NoTable != null)
    {
        <p class="redText">@ViewBag.NoTable</p>
    }
    else
    {
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TableName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TablePlace)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TablePlace)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TableId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TableId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TableId })
            </td>
        </tr>
    }

</table>
        }
    }
