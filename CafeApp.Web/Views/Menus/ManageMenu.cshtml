@model IEnumerable<CafeApp.Model.Menu>

@{
    ViewBag.Title = "ManageMenu";
}

<h2>Manage Menu</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Back to Menu", "AdminMenu", "CafeAdmin")
</p>

@{ 
    if (ViewBag.NoMenu != null)
    {
        <p class="redText">@ViewBag.NoMenu</p>
    }
    else
    {
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MenuId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MenuId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MenuId })
            </td>
        </tr>
    }

</table>
        }
    }
